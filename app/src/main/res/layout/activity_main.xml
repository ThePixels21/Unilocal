<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.MainActivity">

    <EditText
        android:id="@+id/buscar"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_busqueda"
        android:drawableRight="@drawable/magnify"
        />


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/baseline_account_circle_24"
        android:onClick="irALogin"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_reestebalcer_ubicacion"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src = "@drawable/baseline_location_searching_24"
        />

</RelativeLayout>