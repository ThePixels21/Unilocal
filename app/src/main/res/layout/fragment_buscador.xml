<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.BuscadorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@drawable/fondo_busqueda">

        <EditText
            android:enabled="false"
            android:allowClickWhenDisabled="true"
            android:id="@+id/buscador"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@null"
            android:singleLine="true"
            android:hint="@string/txt_busqueda"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/icon_logo_unilocal"/>

        <ImageButton
            android:id="@+id/img_usuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/ic_person_outline_40"/>

    </LinearLayout>

</FrameLayout>